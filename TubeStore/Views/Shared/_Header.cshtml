@inject UserManager<Customer>

<header>
    <div class="container card bg-light mt-2 mb-2">
        <div class="row">
            <div class="col-lg-6">
                <a class="nav-link text-dark " asp-controller="Home" asp-action="Index">Home</a>
            </div>
            <div class="col-lg-6 text-right">
                <div class="row">
                    <div class="col-4">
                        <a class="nav-link text-dark" asp-controller="Contact" asp-action="Index">Contact us</a>
                    </div>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="col-4">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Register">Register</a>
                        </div>
                        <div class="col-4">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Login">Login</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-4">
                            <a class="text">Hi, @User.Identity.Name</a>
                        </div>
                        <div class="col-4">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Logout">Logout</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</header>