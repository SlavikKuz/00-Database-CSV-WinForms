@model CustomerRegistrationViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

    <body class="hold-transition register-page">
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <div class="register-box">
                    <div class="card">
                        <div class="card-body register-card-body">
                            <p class="login-box-msg">Register a new account</p>

                            <form asp-controller="Customer" asp-action="Register" method="post">

                                <div class="input-group mb-3">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="input-group mb-3">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="input-group mb-3">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <div class="icheck-primary">
                                            <input asp-for="Agreement" type="checkbox">
                                            <label for="agreeTerms">
                                                I agree to the <a href="#">terms</a>
                                            </label>
                                            <span asp-validation-for="Agreement" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-4">
                                        <button type="submit" class="btn btn-danger btn-block">Register</button>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </form>

                            <a asp-controller="Customer" asp-action="Login" class="text-center">I already have an account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_ValidationScripts" />
    </body>