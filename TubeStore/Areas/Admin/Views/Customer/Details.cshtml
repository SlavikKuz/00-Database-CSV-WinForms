@model CustomerViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Login)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Login)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>
        </dl>
    </div>
    <div class="container">
        <div class="row">
            <label>User in the roles</label>
        </div>
        <div class="row">
            <form asp-action="Details">
                <input asp-for="@Model.CustomerId" type="hidden">
                @for (int i = 0; i < Model.CustomerInRoles.Count; i++)
                {
                    <div>
                        @Html.HiddenFor(x => Model.CustomerInRoles[i].RoleId)
                        @Html.CheckBoxFor(x => Model.CustomerInRoles[i].Selected, new { @class = "form-check-input" })
                        <label class="form-check-label">@Model.CustomerInRoles[i].RoleName</label>
                    </div>
                }
                <input type="submit" value="Update" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


